mixin suggestions-video(data)
  .suggestions-video
    a.thumbnail(href=data.videoURL)
      img(src=data.thumbnail alt='')
    a.title(href=data.videoURL)= data.title
    span.details
      a(href=data.topicURL)= data.topic
      .separator
      a(href=data.authorURL)= data.author
      .separator
      span= data.viewers + ' Viewers'

doctype html
html(lang="en")
  head
    title= user.name + " on Halp"
    link(href='css/profile.css', rel='stylesheet', type='text/css')
  body
    include header.jade
    #container
      #user-box
        img(src=user.thumbnail)
        #description
          h2 #{user.name} (#{user.username})
          h3 Topics:
            each topic in user.topics
              a.topic(href=topic.url)= topic.name
          h3 #{user.videos} Videos
          h3= user.location
          h3
            a(href=user.website.url)= user.website.label
          h4= user.bio
      .suggestions
        h2 Uploads
        if suggestions.length
          each val in suggestions
            +suggestions-video(val)
          else
            .no-content This user has not uploaded any videos yet.
      .suggestions
        h2 Recently Watched
        if suggestions.length
          each val in suggestions
            +suggestions-video(val)
          else
            .no-content This user has not watched any videos yet.
    include footer.jade
